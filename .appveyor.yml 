  only:
    - main

build: off

cache:
  - '%USERPROFILE%\.gradle\caches'

install:
  - chmod +x gradlew
  - ./gradlew dependencies --refresh-dependencies --no-daemon

test_script:
  - java -jar ./artifacts/app-mbank.jar &
  - sleep 35
  - ./gradlew test --no-daemon --info